<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/red_button"

        android:layout_width="108dp"
        android:layout_height="118dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:gravity="center"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"

        android:onClick="redPress"
        />

    <Button
        android:id="@+id/green_button"

        android:layout_below="@id/red_button"
        android:layout_width="108dp"
        android:layout_height="118dp"
        android:backgroundTint="#00FF00"
        android:gravity="center"

        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"

        android:onClick="greenPress"
        />

    <Button
        android:id="@+id/yellow_button"

        android:layout_below="@id/red_button"
        android:layout_width="108dp"
        android:layout_height="118dp"
        android:backgroundTint="#FFFF00"
        android:gravity="center"

        android:layout_marginStart="220dp"
        android:layout_marginTop="30dp"

        android:onClick="yellowPress"
        />

    <Button
        android:id="@+id/blue_button"

        android:layout_below="@id/green_button"
        android:layout_width="108dp"
        android:layout_height="118dp"
        android:backgroundTint="#0000FF"
        android:gravity="center"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        android:onClick="bluePress"
        />

    <Button
        android:id="@+id/reset_button"

        android:layout_below="@id/blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text = "RESET"
        android:textSize="20dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        android:onClick="resetPress"
        />

</RelativeLayout>